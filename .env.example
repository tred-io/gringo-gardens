# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/gringo_gardens

# Authentication & Session Management
ADMIN_PASSWORD=your_secure_admin_password
SESSION_SECRET=your_session_secret_key_32_chars_min

# Replit Integration (optional - only needed for Replit deployment)
REPL_ID=your_repl_id
REPLIT_DOMAINS=your-repl-domain.replit.dev
REPLIT_ENVIRONMENT=development
ISSUER_URL=https://replit.com/oidc

# Storage Configuration - Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token

# Storage Configuration - Object Storage
PUBLIC_OBJECT_SEARCH_PATHS=/bucket/public,/bucket/images
PRIVATE_OBJECT_DIR=/bucket/.private

# OpenAI Integration (for plant identification)
OPENAI_API_KEY=sk-your_openai_api_key

# Environment
NODE_ENV=development
PORT=5000
VERCEL=false
VERCEL_ENV=development

# Testing (only for test environment)
VERBOSE_TESTS=false